<div class="flex flex-col flex-grow justify-center items-center w-full h-[551px] relative py-16">
    <div class="absolute w-full h-full bg-cover bg-center bg-opacity-50" style="background-image: url('/css/bg-image-4.jpg');"></div>
    <div class="absolute w-full h-full bg-black bg-opacity-50"></div>

        <div class="relative bg-white p-8 rounded-lg shadow-lg w-[400px] mt-10">
            <h2 class="text-2xl font-semibold mb-6 text-center">Add Room Details</h2>
        <form action="~/Admin/AddRoomDetails" method="post" class="space-y-4">
                <div>
                    <label for="RoomType" class="block font-medium">Select Room Type:</label>
                <select name="RoomType" id="RoomType" class="w-full p-2 border-2 border-gray-300 rounded-md focus:ring-2 focus:ring-gray-900 focus:outline-none text-[14px]">
                        <option value="Single">Single</option>
                        <option value="Deluxe">Deluxe</option>
                        <option value="Suite">Suite</option>
                        <option value="Triple">Triple</option>
                        <option value="Dorm">Dorm</option>
                    </select>
                </div>

                <div>
                    <label for="Price" class="block font-medium">Enter Room Price:</label>
                <input type="number" name="Price" id="Price" class="w-full p-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-gray-900 focus:outline-none">
                </div>

                <div>
                    <label for="Availability" class="font-medium">Is the Room Available?</label>
                    <input type="checkbox" name="Availability" id="Availability" class="mr-2">
                </div>

                @* <div> *@
                @*     <label for="Availability" class="block font-medium">Enter Room Availability:</label> *@
                @* <input type="text" name="Availability" id="Availability" class="w-full p-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-gray-900 focus:outline-none"> *@
                @* </div> *@

                <div class="text-center">
                    <input type="submit" value="Add Room Details" class="w-full border bg-gray-900 text-white p-3 rounded-lg hover:border border-gray-900 hover:bg-white hover:text-gray-900  transition duration-300 cursor-pointer">
                </div>
            </form>
        </div>
</div>

