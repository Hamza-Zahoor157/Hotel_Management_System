@model List<Identity_Example.Models.Booking>


<header class="fixed top-0 left-0 w-full h-[60px] bg-gray-900 text-white flex justify-between items-center px-6 shadow-lg z-50">
    <h1 class="text-xl font-bold">Admin Dashboard</h1>

    <nav class="flex space-x-4">
        <a href="BookRoom" class="px-4 py-2 rounded-md transition duration-300 hover:bg-gray-700 hover:text-gray-200">
            Book Room
        </a>
        <a href="CancelReservation" class="px-4 py-2 rounded-md transition duration-300 hover:bg-gray-700 hover:text-gray-200">
            Cancel Reservation
        </a>
        <a href="SearchRooms" class="px-4 py-2 rounded-md transition duration-300 hover:bg-gray-700 hover:text-gray-200">
            Search Rooms
        </a>
        <a href="MyReservations" class="px-4 py-2 rounded-md transition duration-300 hover:bg-gray-700 hover:text-gray-200">
            My Reservations
        </a>

    </nav>

    <a href="/Home/Index" class="px-4 py-2 bg-red-600 rounded-lg transition duration-300 hover:bg-white hover:border-red-700 hover:text-red-800">
        Logout
    </a>
</header>

<div class="pt-[60px] flex-1 relative flex-grow min-h-[543px]">
    <div class="absolute w-full h-full bg-cover bg-center bg-no-repeat" style="background-image: url('/css/bg-image-4.jpg');"></div>
    <div class="absolute w-full h-full bg-black bg-opacity-50"></div>

    <div class="relative py-8 px-6">
        <div class="w-[85%] mx-auto">
            <div class="mb-8 bg-white rounded-lg p-6">
                <h2 class="text-2xl font-bold text-gray-800 mb-1">Reservations Details</h2>
                <p class="text-gray-600">Showing all bookings...</p>
            </div>

            <div class="flex flex-wrap">

                @if (Model != null && Model.Count > 0)
                {
                    @foreach (var booking in Model)
                    {
                        <div class="w-1/3 px-4 mb-8">
                            <div class="bg-white rounded-lg overflow-hidden transition duration-300 hover:shadow-xl transform hover:translate-y-3 hover:translate-x-3 h-full">
                                <div class="p-6">
                                    <div class="flex justify-between items-center mb-4">
                                        <h3 class="font-bold text-xl text-gray-800 text-center">Booking ID-@booking.BookingID</h3>
                                        @* <span class="bg-green-100 text-green-800 text-xs font-semibold px-3 py-1 rounded-full">Active</span> *@
                                    </div>

                                    <div class="space-y-4">
                                        <div class="flex items-center border-b border-gray-100 pb-3">
                                            <i class="fas fa-user w-8 text-gray-400 text-lg"></i>
                                            <div>
                                                <p class="text-xs text-gray-500 uppercase">Guest Name</p>
                                                <p class="text-gray-800 font-medium">@booking.Customer.FullName</p>
                                            </div>
                                        </div>

                                        <div class="flex items-center border-b border-gray-100 pb-3">
                                            <i class="fas fa-door-open w-8 text-gray-400 text-lg"></i>
                                            <div>
                                                <p class="text-xs text-gray-500 uppercase">Room Number</p>
                                                <p class="text-gray-800 font-medium">R-@booking.RoomID</p>
                                            </div>
                                        </div>

                                        <div class="flex items-center">
                                            <i class="fas fa-calendar w-8 text-gray-400 text-lg"></i>
                                            <div>
                                                <p class="text-xs text-gray-500 uppercase ">Stay Period</p>
                                                <p class="text-gray-800 font-medium">
                                                    @booking.CheckInDate.ToString("MMMM dd, yyyy") - @booking.CheckOutDate.ToString("MMMM dd, yyyy")
                                                </p>
                                            </div>
                                        </div>
                                        <div class="flex justify-center align-items-center">
                                            <a href="CancelReservation" class="inline-block bg-gray-900 text-white py-3 px-6 rounded-lg hover:bg-white hover:text-gray-900 hover:border-gray-900 border transition duration-300">
                                                Cancel Booking
                                            </a>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="relative z-10 bg-white p-8 rounded-lg shadow-xl w-[400px] text-center">
                        <h2 class="text-2xl font-semibold mb-4">Reservations Status</h2>
                        <p class="text-gray-700 text-base mb-6">You have no Bookings done so far...</p>
                        <a href="CustomerDashboard" class="inline-block w-full bg-gray-900 text-white py-3 rounded-md hover:bg-white hover:text-gray-900 hover:border-gray-900 border transition duration-300">
                            Go back to Dashboard
                        </a>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

<footer class="relative w-full bg-gray-900 text-white p-5 text-center z-100">
    <p>&copy; 2025 Hotel Management System. All Rights Reserved.</p>
</footer>