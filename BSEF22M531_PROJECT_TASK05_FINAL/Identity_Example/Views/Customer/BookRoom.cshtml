<div class="flex flex-col flex-grow justify-center items-center w-full h-[521px] relative py-16 mt-[30px]">
    <div class="absolute w-full h-full bg-cover bg-center" style="background-image: url('/css/bg-image-3.jpg');"></div>
    <div class="absolute w-full h-full bg-black bg-opacity-40 flex flex-col justify-center items-center text-white p-10 text-center"></div>

    <div class="bg-white p-8 rounded-lg shadow-lg w-[400px] z-50">
        <h2 class="text-2xl text-gray-900 font-semibold mb-6 text-center">Add Booking Details</h2>
        <form action="~/Customer/BookRoom" method="post" class="space-y-4">
            @* <div> *@
            @*     <label for="CustomerID" class="text-gray-900 block font-medium">Enter Customer ID:</label> *@
            @*     <input type="text" name="CustomerID" id="CustomerID" class="w-full p-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-gray-900 focus:outline-none"> *@
            @* </div> *@

            <div>
                <label for="RoomID" class="text-gray-900 block font-medium">Enter Room ID:</label>
                <input type="number" name="RoomID" id="RoomID" class="w-full p-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-gray-900 focus:outline-none">
            </div>
            <div>
                <label for="CheckInDate" class="text-gray-900 block font-medium">Check-In Date: </label>
                <input type="date" name="CheckInDate" id="CheckInDate" class="w-full p-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-gray-900 focus:outline-none" />
            </div>
            <div>
                <label for="CheckOutDate" class=" text-gray-900 block font-medium">Check-Out Date:</label>
                <input type="date" name="CheckOutDate" id="CheckOutDate" class="w-full p-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-gray-900 focus:outline-none" />
            </div>

            <div class="text-center">
                <input type="submit" value="Book Room" class="w-full border bg-gray-900 text-white p-3 rounded-lg hover:border border-gray-900 hover:bg-white hover:text-gray-900 transition duration-300 cursor-pointer">
            </div>
            
        </form>
    </div>
</div>

