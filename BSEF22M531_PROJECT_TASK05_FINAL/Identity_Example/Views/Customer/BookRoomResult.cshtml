@model string

@{
    ViewData["Title"] = "Book Room Result";
}

<div class="flex justify-center items-center w-full h-screen relative">
    <div class="absolute w-full h-full bg-cover bg-center" style="background-image: url('/css/bg-image-3.jpg');"></div>
    <div class="absolute w-full h-full bg-black bg-opacity-50"></div>

    <div class="relative z-10 bg-white p-8 rounded-lg shadow-xl w-[400px] text-center">
        <h2 class="text-2xl font-semibold mb-4">Booking Status</h2>
        <p class="text-gray-700 text-base mb-6">@Model</p>
        <a href="BookRoom" class="inline-block w-full bg-gray-900 text-white py-3 rounded-md hover:bg-white hover:text-gray-900 hover:border-gray-900 border transition duration-300">
            Book Another Room
        </a>
    </div>
</div>
