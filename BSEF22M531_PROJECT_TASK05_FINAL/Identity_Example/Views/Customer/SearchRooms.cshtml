<header class="fixed top-0 left-0 w-full h-[60px] bg-gray-900 text-white flex justify-between items-center px-6 shadow-lg z-[6000]">
    <h1 class="text-xl font-bold">Customer Dashboard</h1>
    <nav class="flex space-x-4">
        <a href="BookRoom" class="px-4 py-2 rounded-md transition duration-300 hover:bg-gray-700 hover:text-gray-200">Book Room</a>
        <a href="CancelReservation" class="px-4 py-2 rounded-md transition duration-300 hover:bg-gray-700 hover:text-gray-200">Cancel Reservation</a>
        <a href="SearchRooms" class="px-4 py-2 rounded-md transition duration-300 bg-gray-700 text-gray-200">Search Rooms</a>
        <a href="MyReservations" class="px-4 py-2 rounded-md transition duration-300 hover:bg-gray-700 hover:text-gray-200">My Reservations</a>
    </nav>
    <a href="/Home/Index" class="px-4 py-2 bg-red-600 rounded-lg transition duration-300 hover:bg-white hover:border-red-700 hover:text-red-800">Logout</a>
</header>

<div class="flex flex-col flex-grow justify-center items-center w-full h-[491px] relative py-16 mt-[60px]">
    <div class="absolute w-full h-full bg-cover bg-center" style="background-image: url('/css/bg-image-3.jpg');"></div>
    <div class="absolute w-full h-full bg-black bg-opacity-40 flex flex-col justify-center items-center text-white p-10 text-center"></div>

    <div class="bg-white p-8 rounded-lg shadow-lg w-[400px] z-50">
        <h2 class="text-2xl text-gray-900 font-semibold mb-6 text-center">Search Rooms</h2>
        <form action="~/Customer/SearchRooms" method="post" class="space-y-4">
            <div>
                <label for="RoomType" class="block font-medium">Select Room Type:</label>
                <select name="RoomType" id="RoomType" class="w-full p-2 border-2 border-gray-300 rounded-md focus:ring-2 focus:ring-gray-900 focus:outline-none text-[14px]">
                    <option value="Single">Single</option>
                    <option value="Deluxe">Deluxe</option>
                    <option value="Suite">Suite</option>
                    <option value="Triple">Triple</option>
                    <option value="Dorm">Dorm</option>
                </select>
            </div>

            <div>
                <label for="minprice" class="block font-medium">Enter Minimum Price:</label>
                <input type="number" name="minprice" id="minprice" class="w-full p-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-gray-900 focus:outline-none">
            </div>

            <div>
                <label for="maxprice" class="block font-medium">Enter Maximum Price:</label>
                <input type="number" name="maxprice" id="maxprice" class="w-full p-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-gray-900 focus:outline-none">
            </div>
            <div class="text-center">
                <input type="submit" value="Search" class="w-full border bg-gray-900 text-white p-3 rounded-lg hover:border border-gray-900 hover:bg-white hover:text-gray-900 transition duration-300 cursor-pointer">
            </div>
        </form>
    </div>
</div>

<footer class="w-full bg-gray-900 text-white p-4 text-center mt-auto">
