@model List<Identity_Example.Models.Room>

<div class="min-h-screen flex flex-col">
<header class="fixed top-0 left-0 w-full h-[60px] bg-gray-900 text-white flex justify-between items-center px-6 shadow-lg z-50">
    <h1 class="text-xl font-bold">Customer Dashboard</h1>
    <nav class="flex space-x-4">
        <a href="BookRoom" class="px-4 py-2 rounded-md transition duration-300 hover:bg-gray-700 hover:text-gray-200">Book Room</a>
        <a href="CancelReservation" class="px-4 py-2 rounded-md transition duration-300 hover:bg-gray-700 hover:text-gray-200">Cancel Reservation</a>
        <a href="SearchRooms" class="px-4 py-2 rounded-md transition duration-300 bg-gray-700 text-gray-200">Search Rooms</a>
    </nav>
    <a href="/Home/Index" class="px-4 py-2 bg-red-600 rounded-lg transition duration-300 hover:bg-white hover:border-red-700 hover:text-red-800">Logout</a>
</header>

<div class="pt-[60px] flex-1 relative flex-grow ">
    <div class="absolute w-full h-full bg-cover bg-center bg-no-repeat" style="background-image: url('/css/bg-image-2.jpg');"></div>
    <div class="absolute w-full h-full bg-black bg-opacity-50"></div>

    <div class="relative py-8 px-6">
        <div class="w-[85%] mx-auto">
            <div class="mb-12 bg-white rounded-lg p-6">
                <h2 class="text-2xl font-bold text-gray-800 mb-1">Available Rooms</h2>
                <p class="text-gray-600">Showing all the available rooms according to your requirements...</p>
            </div>

            <div class="flex flex-wrap">
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var room in Model)
                    {
                        <div class="w-1/3 px-4 mb-12">
                            <div class="bg-white rounded-lg overflow-hidden transition duration-300 hover:shadow-xl transform hover:translate-y-3 hover:translate-x-3 h-full">
                                @{
                                    string? url = "/css/SingleRoom.jpg";
                                    if (room.RoomType == "Single") url = "/css/Single-Room.jpg";
                                    else if (room.RoomType == "Suite") url = "/css/Suite.jpg";
                                    else if (room.RoomType == "Triple") url = "/css/Triple-Room.jpg";
                                    else if (room.RoomType == "Deluxe") url = "/css/Deluxe-Room.jpg";
                                    else if (room.RoomType == "Dorm") url = "/css/Hostel_Dorm_room.jpg";
                                }

                                <div>
                                    <img src=@url alt=@room.RoomType class="w-full h-48 object-cover" />
                                </div>
                                <div class="p-6">
                                    <div class="flex justify-between items-center mb-4">
                                        <h3 class="font-bold text-xl text-gray-800 inline-block mx-auto">Room ID-@room.RoomID</h3>
                                    </div>
                                    <div class="space-y-4">
                                        <div class="flex items-center border-b border-gray-100 pb-3">
                                            <i class="fas fa-bed w-8 text-gray-400 text-md"></i>
                                            <div>
                                                <p class="text-xs text-gray-500 uppercase">Room Type</p>
                                                <p class="text-gray-800 font-medium">@room.RoomType</p>
                                            </div>
                                        </div>
                                        <div class="flex items-center border-b border-gray-100 pb-3">
                                            <i class="fas fa-money-bill-wave w-8 text-gray-400 text-md"></i>
                                            <div>
                                                <p class="text-xs text-gray-500 uppercase">Room Price</p>
                                                <p class="text-gray-800 font-medium">$@room.Price</p>
                                            </div>
                                        </div>
                                        <div class="flex justify-center align-items-center">
                                            <a href="BookRoom" class="inline-block bg-gray-900 text-white py-3 px-6 rounded-lg hover:bg-white hover:text-gray-900 hover:border-gray-900 border transition duration-300">
                                                    Book Room
                                            </a>
                                            </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="relative z-10 bg-white p-8 rounded-lg shadow-xl w-[400px] text-center mx-auto">
                        <h2 class="text-2xl font-semibold mb-4">Searched Rooms</h2>
                        <p class="text-gray-700 text-base mb-6">No Room Available as per your requirement...</p>
                        <a href="SearchRooms" class="inline-block w-full bg-gray-900 text-white py-3 rounded-md hover:bg-white hover:text-gray-900 hover:border-gray-900 border transition duration-300">
                            Go Back
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


<footer class="relative w-full bg-gray-900 text-white p-5 text-center z-1000">
    <p>&copy; 2025 Hotel Management System. All Rights Reserved.</p>
</footer>
</div>
